[include]
  path = /home/eeay/.config/delta/catppuccin.gitconfig
[core]
  editor = nvim
  autocrlf = input
  safecrlf = true
  pager = delta
[init]
  defaultBranch = main
[user]
  name = Enes Emre Aydogan
  email = enes.e.aydogan@gmail.com
[commit]
  gpgSign = true
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  dark = true      # or light = true, or omit for auto-detection
  line-numbers = true
  features = catppuccin-mocha

[merge]
  conflictStyle = zdiff3
